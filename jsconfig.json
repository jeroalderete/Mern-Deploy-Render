{
  "compilerOptions": {
    "module": "ES6",
    "jsx": "preserve",
    "checkJs": false,  // Cambiado a false para desactivar la verificaci√≥n de tipos en archivos JS
    "allowJs": true,   // Permitir que TypeScript maneje archivos JavaScript
    "target": "ES6",
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}

