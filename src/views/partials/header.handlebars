<header style="background-color: #333; padding: 20px; color: white;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1 style="margin: 0;">{{title}}</h1>
        <nav style="display: flex; align-items: center;">
            {{#if userIsAuthenticated}}
            <p style="margin: 0; padding-right: 15px;">Bienvenido {{userIsAuthenticated.email}}</p>
            <a href="/logout" style="color: white; text-decoration: none; padding: 10px; background-color: #ff5733; border-radius: 5px;">Cerrar sesión</a>
            {{else}}
            <a href="/login" style="color: white; text-decoration: none; padding: 10px; margin-right: 10px; background-color: #28a745; border-radius: 5px;">Iniciar sesión</a>
            <a href="/register" style="color: white; text-decoration: none; padding: 10px; background-color: #007bff; border-radius: 5px;">Registrarse</a>
            {{/if}}
        </nav>
    </div>
</header>
